#!/usr/bin/env bash
# This script changes the localhost IP and resolves facebook.com to a different IP

# Check if the script is run as root
if [ "$(whoami)" != "root" ]; then
    echo "Please run this script as root or use sudo."
    exit 1
fi

# Update localhost resolution manually if not already set
if ! grep -q "127.0.0.2" /etc/hosts; then
    echo "127.0.0.2 localhost" | sudo tee -a /etc/hosts
    echo "Updated localhost to 127.0.0.2"
fi

# Add facebook.com resolution if not already present
if ! grep -q "facebook.com" /etc/hosts; then
    echo "8.8.8.8 facebook.com" | sudo tee -a /etc/hosts
    echo "Added facebook.com resolution"
fi

